[group]戦キャラ
	[subject][! @鬼門妖異譚->戦キャラ名, $Val !]:dir
		[replace]0x[! 0xBF4330+$Val* 0xC38 !],鬼門妖異譚->戦ステータス
	[back]
[/group]
[group]戦ステータス
	[subject]レベル: calc,0x04,1,99
	[subject]HP(最大): calc,0x10,1,999
	[subject]HP(現在): calc,0x14,1,999
	[subject]移動力: calc,0x18,1,999
	[subject]移動力: calc,0x1C,1,999
	[subject]再行動/ON: toggle,0x1EC,FF,00
[/group]
